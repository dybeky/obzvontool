{
  "name": "obzvontool",
  "version": "1.0.0",
  "description": "OBZVON.",
  "author": "Paulus Platov",
  "main": "electron-dist/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron:build": "tsc -p tsconfig.electron.json",
    "electron:dev": "npm run electron:build && concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && npm run electron:build && electron-builder",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.cobra.obzvon",
    "productName": "OBZVON",
    "icon": "obzvonico.ico",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron-dist/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "obzvonico.ico",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "obzvon.exe"
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
