{
  "name": "obzvontool",
  "version": "1.0.0",
  "description": "OBZVON.",
  "author": "Paulus Platov",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.cobra.obzvon",
    "productName": "OBZVON",
    "icon": "obzvonico.ico",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "obzvonico.ico",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "OBZVON.exe"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
