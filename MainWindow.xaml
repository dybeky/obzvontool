<Window x:Class="obzvontool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Obzvon Tool"
        Height="750" Width="1050"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded"
        StateChanged="Window_StateChanged"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Window.Resources>
        <!-- Кнопка START -->
        <Style x:Key="StartButton" TargetType="Button">
            <Setter Property="Background" Value="#9a9aed"/>
            <Setter Property="Foreground" Value="#1a1a24"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="70,22"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="16" Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#acace8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8585d0"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Мини кнопка -->
        <Style x:Key="MiniButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a4a"/>
            <Setter Property="Foreground" Value="#8a8a9a"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4a4a5a"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Difficulty Button -->
        <Style x:Key="DifficultyButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6a6a7a"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}"
                                BorderBrush="#3a3a4a" BorderThickness="1"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#5a5a6a"/>
                                <Setter Property="Foreground" Value="#9a9a9a"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#9a9aed"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#9a9aed"/>
                                <Setter Property="Foreground" Value="#1a1a24"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка GitHub -->
        <Style x:Key="GithubButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#5a5a6a"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}"
                                BorderBrush="#3a3a4a" BorderThickness="1"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385c.6.105.825-.255.825-.57c0-.285-.015-1.23-.015-2.235c-3.015.555-3.795-.735-4.035-1.41c-.135-.345-.72-1.41-1.23-1.695c-.42-.225-1.02-.78-.015-.795c.945-.015 1.62.87 1.845 1.23c1.08 1.815 2.805 1.305 3.495.99c.105-.78.42-1.305.765-1.605c-2.67-.3-5.46-1.335-5.46-5.925c0-1.305.465-2.385 1.23-3.225c-.12-.3-.54-1.53.12-3.18c0 0 1.005-.315 3.3 1.23c.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23c.66 1.65.24 2.88.12 3.18c.765.84 1.23 1.905 1.23 3.225c0 4.605-2.805 5.625-5.475 5.925c.435.375.81 1.095.81 2.22c0 1.605-.015 2.895-.015 3.3c0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"
                                      Fill="{TemplateBinding Foreground}" Width="14" Height="14" Stretch="Uniform"
                                      VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="@dybeky" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#9a9aed"/>
                                <Setter Property="Foreground" Value="#9a9aed"/>
                            </Trigger>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="scale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Control Button -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6a6a7a"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3a3a4a"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#e81123"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#24242e" CornerRadius="12" TextElement.FontFamily="{StaticResource MuseoSansBold}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#1a1a24" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Border CornerRadius="12,12,0,0" Background="#1a1a24"/>

                <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                    <Ellipse Width="8" Height="8" Fill="#9a9aed" Margin="0,0,8,0"/>
                    <TextBlock Text="OBZVON TOOL" FontSize="12" FontWeight="SemiBold" Foreground="#6a6a7a"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click">
                        <Path Data="M0,0 H10" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1"/>
                    </Button>
                    <Button Style="{StaticResource WindowControlButton}" Click="MaximizeButton_Click">
                        <Path x:Name="MaximizeIcon" Data="M0,0 H10 V10 H0 Z" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1" Fill="Transparent"/>
                    </Button>
                    <Button Style="{StaticResource CloseButton}" Click="CloseButton_Click">
                        <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" StrokeThickness="1"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Border Grid.Row="1" Background="#292929" CornerRadius="0,0,12,12">
                <Canvas x:Name="GameCanvas" Background="Transparent"
                        MouseLeftButtonDown="GameCanvas_MouseLeftButtonDown"
                        ClipToBounds="True">

                    <!-- Grid Pattern Background -->
                    <Canvas.OpacityMask>
                        <VisualBrush TileMode="Tile" Viewport="0,0,40,40" ViewportUnits="Absolute">
                            <VisualBrush.Visual>
                                <Grid Width="40" Height="40">
                                    <Rectangle Fill="#292929"/>
                                    <Rectangle Width="1" Height="40" Fill="#2f2f3a" HorizontalAlignment="Right"/>
                                    <Rectangle Width="40" Height="1" Fill="#2f2f3a" VerticalAlignment="Bottom"/>
                                </Grid>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Canvas.OpacityMask>

                    <!-- Стартовый экран -->
                    <Grid x:Name="StartScreen"
                          Width="{Binding ActualWidth, ElementName=GameCanvas}"
                          Height="{Binding ActualHeight, ElementName=GameCanvas}">
                        <Grid.Background>
                            <SolidColorBrush Color="#292929"/>
                        </Grid.Background>

                        <!-- INFO Box -->
                        <Border Background="#24242e" BorderBrush="#3a3a4a" BorderThickness="1"
                                CornerRadius="10" Padding="16,14"
                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                Margin="30,0,0,0">
                            <StackPanel>
                                <TextBlock Text="INFO" FontSize="11" Foreground="#9a9aed" Margin="0,0,0,8"/>
                                <TextBlock Text="made for COBRA-servers" FontSize="13" Foreground="#7a7a8a"/>
                            </StackPanel>
                        </Border>

                        <!-- Animated gradient background -->
                        <Ellipse x:Name="GradientOrb1" Width="600" Height="600" Opacity="0.04"
                                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-200,-150,0,0"
                                 CacheMode="BitmapCache" IsHitTestVisible="False">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#9a9aed" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse x:Name="GradientOrb2" Width="500" Height="500" Opacity="0.03"
                                 HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-150,-100"
                                 CacheMode="BitmapCache" IsHitTestVisible="False">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#e6e095" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Ellipse x:Name="GradientOrb3" Width="450" Height="450" Opacity="0.025"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,100,0,0"
                                 CacheMode="BitmapCache" IsHitTestVisible="False">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#9a9aed" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Декоративные круги -->
                        <Ellipse Width="350" Height="350" Opacity="0.025" Fill="#9a9aed"
                                 HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-120,-120,0,0"
                                 CacheMode="BitmapCache"/>
                        <Ellipse Width="450" Height="450" Opacity="0.02" Fill="#e6e095"
                                 HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-180,-180"
                                 CacheMode="BitmapCache"/>
                        <Ellipse x:Name="FloatingCircle1" Width="150" Height="150" Opacity="0.035" Fill="#9a9aed"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-350,-250,0,0"
                                 CacheMode="BitmapCache"/>
                        <Ellipse x:Name="FloatingCircle2" Width="100" Height="100" Opacity="0.025" Fill="#e6e095"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="400,300,0,0"
                                 CacheMode="BitmapCache"/>
                        <Ellipse x:Name="FloatingCircle3" Width="80" Height="80" Opacity="0.03" Fill="#9a9aed"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250,-200,0,0"
                                 CacheMode="BitmapCache"/>
                        <Ellipse x:Name="FloatingCircle4" Width="120" Height="120" Opacity="0.02" Fill="#e6e095"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-300,200,0,0"
                                 CacheMode="BitmapCache"/>
                        <Ellipse x:Name="FloatingCircle5" Width="60" Height="60" Opacity="0.04" Fill="#9a9aed"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="100,350,0,0"
                                 CacheMode="BitmapCache"/>
                        <Ellipse x:Name="FloatingCircle6" Width="90" Height="90" Opacity="0.025" Fill="#e6e095"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-200,-350,0,0"
                                 CacheMode="BitmapCache"/>

                        <!-- Canvas для фоновых частиц -->
                        <Canvas x:Name="BackgroundParticles" IsHitTestVisible="False"
                                Width="{Binding ActualWidth, ElementName=GameCanvas}"
                                Height="{Binding ActualHeight, ElementName=GameCanvas}"/>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                            <!-- Часы -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,35">
                                <!-- Европейское время -->
                                <Border Background="#24242e" BorderBrush="#3a3a4a" BorderThickness="1"
                                        CornerRadius="12" Width="130" Height="70" Margin="0,0,15,0">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="EUROPE" FontSize="10" Foreground="#5a5a6a"
                                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="EuropeTimeText" Text="00:00:00" FontSize="22"
                                                   Foreground="#358db0" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Московское время -->
                                <Border Background="#24242e" BorderBrush="#3a3a4a" BorderThickness="1"
                                        CornerRadius="12" Width="130" Height="70">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="MOSCOW" FontSize="10" Foreground="#5a5a6a"
                                                   HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="MoscowTimeText" Text="00:00:00" FontSize="22"
                                                   Foreground="#e6e095" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- High Score -->
                            <StackPanel x:Name="HighScorePanel" Orientation="Horizontal" HorizontalAlignment="Center"
                                        Margin="0,0,0,25" Opacity="0">
                                <TextBlock Text="BEST:" FontSize="12" Foreground="#5a5a6a" VerticalAlignment="Center"/>
                                <TextBlock x:Name="HighScoreText" Text="0" FontSize="12" FontWeight="Bold"
                                                                                      Foreground="#e6e095" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>

                            <!-- Difficulty Selection -->
                            <StackPanel x:Name="DifficultyPanel" Orientation="Horizontal" HorizontalAlignment="Center"
                                        Margin="0,0,0,30" Opacity="0">
                                <RadioButton x:Name="EasyMode" Content="EASY" Style="{StaticResource DifficultyButton}" GroupName="Difficulty"/>
                                <RadioButton x:Name="MediumMode" Content="MEDIUM" Style="{StaticResource DifficultyButton}" GroupName="Difficulty" IsChecked="True" Margin="8,0"/>
                                <RadioButton x:Name="HardMode" Content="HARD" Style="{StaticResource DifficultyButton}" GroupName="Difficulty"/>
                            </StackPanel>

                            <!-- Кнопка START -->
                            <Button x:Name="StartButton" Content="START"
                                    Style="{StaticResource StartButton}"
                                    Click="StartButton_Click"
                                    HorizontalAlignment="Center">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="50" Opacity="0.35" Color="#9a9aed"/>
                                </Button.Effect>
                            </Button>

                            <!-- GitHub кнопка -->
                            <Button x:Name="GithubBtn" Style="{StaticResource GithubButton}"
                                    Click="GithubButton_Click"
                                    HorizontalAlignment="Center" Margin="0,35,0,0" Opacity="0"/>
                        </StackPanel>

                        <!-- Hotkeys hint -->
                        <StackPanel x:Name="HotkeyHints" Orientation="Horizontal" HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom" Margin="0,0,0,25" Opacity="0">
                            <TextBlock Text="SPACE" FontSize="11" Foreground="#4a4a5a" Padding="8,4"
                                       Background="#2a2a34" Margin="0,0,5,0"/>
                            <TextBlock Text="start" FontSize="11" Foreground="#3a3a4a" VerticalAlignment="Center" Margin="0,0,20,0"/>
                            <TextBlock Text="F11" FontSize="11" Foreground="#4a4a5a" Padding="8,4"
                                       Background="#2a2a34" Margin="0,0,5,0"/>
                            <TextBlock Text="fullscreen" FontSize="11" Foreground="#3a3a4a" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- HUD во время игры -->
                    <Border x:Name="GameHUD" Canvas.Left="20" Canvas.Top="20"
                            Background="#1a1a24" CornerRadius="12" Padding="20,12"
                            Visibility="Collapsed" Opacity="0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.4" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="ScoreText" Text="0" FontSize="26" FontWeight="Bold"
                                                                              Foreground="#e6e095" VerticalAlignment="Center"/>
                            <Rectangle Width="1" Height="22" Fill="#3a3a4a" Margin="18,0"/>
                            <TextBlock x:Name="AccuracyText" Text="100%" FontSize="26" FontWeight="Bold"
                                                                              Foreground="#9a9aed" VerticalAlignment="Center"/>
                            <Rectangle Width="1" Height="22" Fill="#3a3a4a" Margin="18,0"/>
                            <!-- Combo display -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="ComboText" Text="0" FontSize="26" FontWeight="Bold"
                                                                                      Foreground="#e6e095" VerticalAlignment="Center"
                                           RenderTransformOrigin="0.5,0.5"/>
                                <TextBlock Text="x" FontSize="16" Foreground="#6a6a7a" VerticalAlignment="Center" Margin="2,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Pause indicator -->
                    <Border x:Name="PauseIndicator" Canvas.Right="20" Canvas.Top="20"
                            Background="#1a1a24" CornerRadius="8" Padding="14,8"
                            Visibility="Collapsed">
                        <TextBlock Text="PAUSED" FontSize="13" FontWeight="Bold"
                                   FontFamily="{StaticResource MuseoSansBold}" Foreground="#9a9aed"/>
                    </Border>

                    <!-- Экран результатов -->
                    <Grid x:Name="ResultScreen"
                          Width="{Binding ActualWidth, ElementName=GameCanvas}"
                          Height="{Binding ActualHeight, ElementName=GameCanvas}"
                          Background="#292929" Visibility="Collapsed">

                        <Ellipse Width="300" Height="300" Opacity="0.025" Fill="#e6e095"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-450,-350,0,0"/>
                        <Ellipse Width="200" Height="200" Opacity="0.035" Fill="#9a9aed"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" Margin="450,350,0,0"/>

                        <StackPanel x:Name="ResultContent" VerticalAlignment="Center" HorizontalAlignment="Center">

                            <!-- New High Score badge -->
                            <Border x:Name="NewHighScoreBadge" Background="#e6e095" CornerRadius="6"
                                    Padding="12,6" HorizontalAlignment="Center" Margin="0,0,0,15" Visibility="Collapsed">
                                <TextBlock Text="NEW HIGH SCORE!" FontSize="12" FontWeight="Bold"
                                           FontFamily="{StaticResource MuseoSansBold}" Foreground="#1a1a24"/>
                            </Border>

                            <!-- Очки -->
                            <TextBlock x:Name="FinalScoreText" Text="0" FontSize="85" FontWeight="Bold"
                                                                              Foreground="#e6e095" HorizontalAlignment="Center" Margin="0,0,0,5"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <ScaleTransform x:Name="ScoreScale" ScaleX="1" ScaleY="1"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>

                            <TextBlock Text="SCORE" FontSize="13" FontWeight="Medium"
                                       Foreground="#4a4a5a" HorizontalAlignment="Center" Margin="0,0,0,40"/>

                            <!-- Статистика -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                                <StackPanel Margin="0,0,45,0">
                                    <TextBlock x:Name="HitsText" Text="0" FontSize="38" FontWeight="Bold"
                                                                                              Foreground="#9a9aed" HorizontalAlignment="Center"/>
                                    <TextBlock Text="HITS" FontSize="10" Foreground="#4a4a5a" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>

                                <Rectangle Width="1" Height="55" Fill="#3a3a4a"/>

                                <StackPanel Margin="45,0">
                                    <TextBlock x:Name="MissesText" Text="0" FontSize="38" FontWeight="Bold"
                                                                                              Foreground="#f87171" HorizontalAlignment="Center"/>
                                    <TextBlock Text="MISS" FontSize="10" Foreground="#4a4a5a" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>

                                <Rectangle Width="1" Height="55" Fill="#3a3a4a"/>

                                <StackPanel Margin="45,0,0,0">
                                    <TextBlock x:Name="FinalAccuracyText" Text="100%" FontSize="38" FontWeight="Bold"
                                                                                              Foreground="#9a9aed" HorizontalAlignment="Center"/>
                                    <TextBlock Text="ACC" FontSize="10" Foreground="#4a4a5a" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Max Combo -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,45">
                                <TextBlock Text="MAX COMBO:" FontSize="13" Foreground="#5a5a6a" VerticalAlignment="Center"/>
                                <TextBlock x:Name="MaxComboText" Text="0" FontSize="18" FontWeight="Bold"
                                                                                      Foreground="#e6e095" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>

                            <Button Content="RESTART" Style="{StaticResource StartButton}" Padding="55,20"
                                    Click="StartButton_Click" HorizontalAlignment="Center">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="40" Opacity="0.3" Color="#9a9aed"/>
                                </Button.Effect>
                            </Button>

                            <Button Content="MENU" Style="{StaticResource MiniButton}"
                                    Click="BackToMenu_Click" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                        </StackPanel>
                    </Grid>
                </Canvas>
            </Border>
        </Grid>
    </Border>
</Window>
